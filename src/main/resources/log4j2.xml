<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <!-- Console appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p %m%n"/>
        </Console>

        <!-- Socket appender -->
        <Socket name="socket" host="localhost" port="9999" reconnectionDelayMillis="5000">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p %m%n"/>
        </Socket>

        <!-- File appender for error logs -->
        <File name="File" fileName="logs/error.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p %c{1} - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10MB" />
            </Policies>
        </File>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="socket"/>
        </Root>

        <!-- Logger for error level -->
        <Logger name="org.example" level="error" additivity="false">
            <AppenderRef ref="File"/>
            <AppenderRef ref="socket"/>
        </Logger>
    </Loggers>
</Configuration>
